{
  "manifest_version": 2,

  "name": "WUTemp",
  "description": "This extension shows the temperature of a Weather Underground station",
  "version": "1.3",

  "browser_action": {
  },
  "background": {"scripts": ["background.js"]},
  "permissions": [
    "http://stationdata.wunderground.com/",
	"storage"
  ],
  "options_ui": {
	"page": "options.html",
	"chrome_style": true
  }
}